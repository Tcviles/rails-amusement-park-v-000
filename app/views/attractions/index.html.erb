<h1>Listing attractions</h1>

<% @attractions.each do |attraction| %>
  <label>Name</label><%= attraction.name %>
  <label>Tickets</label><%= attraction.tickets %>
  <label>Details</label>
  <% if current_user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
  <% end %>
<%end%>

<% if !!@user %>
  <%= button_to "Back to profile", user_path(@user)%>
<% else %>
  <%= link_to 'New Attraction', new_attraction_path %>
<% end %>
